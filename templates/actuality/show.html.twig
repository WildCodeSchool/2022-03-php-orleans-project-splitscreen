{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ encore_entry_link_tags('actu') }}
{% endblock %}

{% block title %}Actualité :
	{{ actuality.title }}
{% endblock %}

{% block body %}
	<a class="ms-5 d-flex gap-3 text-decoration-none" href="{{ path('actuality_index') }}">
		<i class="bi bi-arrow-left fs-1 text-secondary"></i>
		<div class="d-flex align-self-center">
			<p class="arrowT m-0 fs-5">Retour à la liste des actualités</p>
		</div>
	</a>
	<main class="container">
		<div class="d-flex flex-column justify-content-center align-items-center mb-3">
			<div class="d-flex align-items-center">
				<i class="bi bi-newspaper fs-2 me-2 text-primary"></i>
				<h1 class="">
					{{ actuality.title }}
				</h1>
				<i class="bi bi-dpad fs-2 ms-2 text-secondary"></i>
			</div>
			<small class="text-muted">
				{{ actuality.date| date("d/m/Y")}}
			</small>
		</div>
		<div>
			<a class="w-100" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
				<div class="d-flex justify-content-center align-items-center offset-lg-3 col-lg-6">
					<img src="{{ vich_uploader_asset(actuality) }}" class="w-100" alt="{{ actuality.title }}">
				</div>
			</a>

			<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog modal-fullscreen">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body">
							<img src="{{ vich_uploader_asset(actuality) }}" class="w-100" alt="{{ actuality.title }}">
						</div>
					</div>
				</div>
			</div>
			<div class="m-5">
				<p>{{ actuality.description|raw }}</p>
			</div>
		</div>
		<div class="mb-5">
			{{ render(controller('App\\Controller\\DefaultController::banner')) }}
		</div>

	</main>
{% endblock %}
