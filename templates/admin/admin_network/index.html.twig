{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Réseaux sociaux{% endblock %}

{% block body %}
<main class="container">
    <h1>Réseaux sociaux</h1>
    <div class="d-flex justify-content-start">
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Lien</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for network in networks %}
            <tr>
                <td>{{ network.title|capitalize }}</td>
                <td>{{ network.link }}</td>
                <td class="d-flex">
                    <a class="btn btn-primary btn-lg" href="{{ path('admin_network_edit', {'id': network.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de réseaux sociaux trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</main>
{% endblock %}
