{% extends 'base.html.twig' %}

{% block title %}Èvénements{% endblock %}

{% block body %}
    <h1></h1>

    <table class="table">
        <tbody>
            <tr>        
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ event.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_event_index') }}">Retour à la liste</a>

    <a href="{{ path('admin_event_edit', {'id': event.id}) }}">Modifier</a>

    {{ include('admin_event/_delete_form.html.twig') }}
{% endblock %}
