	<div class="mt-5 ms-5">
		<a href="{{ path('actuality_index') }}">
			<i class="bi bi-arrow-left fs-1"></i>
		</a>
	</div>
	<div class="text-center m-5">
		<h1 class="">{{ actuality.title }}</h1>
