{% extends 'base.html.twig' %}

{% block title %}Actualit√© :
	{{ actuality.title }}
{% endblock %}

{% block body %}
	<div class="mt-5 ms-5">
		<a href="{{ path('actuality_index') }}">
			<i class="bi bi-arrow-left fs-1 text-secondary"></i>
		</a>
	</div>
	<div class="d-flex flex-column justify-content-center align-items-center mb-3">
		<div class="d-flex align-items-center">
			<i class="bi bi-newspaper fs-2 me-2 text-primary"></i>
			<h1 class="">{{ actuality.title }}</h1>
			<i class="bi bi-dpad fs-2 ms-2 text-secondary"></i>
		</div>
		<small class="text-muted">{{ actuality.date|date }}</small>
	</div>


	<a type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
		<div class="d-flex justify-content-center align-items-center">
			<img src="{{ vich_uploader_asset(actuality) }}" class="w-25" alt="{{ actuality.title }}">
		</div>
	</a>

	<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-fullscreen">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<img src="{{ vich_uploader_asset(actuality) }}" class="w-100" alt="{{ actuality.title }}">
				</div>
			</div>
		</div>
	</div>
	<div class="m-5">
		<p>{{ actuality.description|raw }}</p>
	</div>
{% endblock %}
