{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Évènements
{% endblock %}

{% block body %}
	{% include 'components/_header.html.twig' with {'title': 'Évènements'} %}
	<section>
		<h1 class="text-center p-2 mt-5">Se tenir informé pour mieux jouer !</h1>
	</section>
	<main class="container">
		<div class="p-2">
			<h3 class="border-bottom border-2 border-secondary pb-2">Nos Évènements</h3>
		</div>
		<div class="mb-5">
			<h3 class="text-light text-center mx-auto mt-4 py-1 px-2 mb-3 mx-auto bg-secondary">À venir</h3>
			{% if upcomingEvents is empty %}
				<p class="text-center mb-5">Pas d'évènement à venir.</p>
			{% else %}
				<section class="container">
					<div class="row">
						{% for event in upcomingEvents %}
							{% include 'components/_card_event.html.twig' %}
						{% endfor %}
					</div>
				</section>
			{% endif %}

		</div>
		<div class="mb-5">
			<h3 class="text-light text-center mx-auto mt-4 py-1 px-2 mb-3 mx-auto bg-primary">Passés</h3>
			{% if pastEvents is empty %}
				<p class="text-center">Pas d'évènement passé.</p>
			{% else %}
				<section class="container">
					<div class="row">
						{% for event in pastEvents %}
							{% include 'components/_card_event_past.html.twig' %}
						{% endfor %}
					</div>
				</section>
			{% endif %}
		</div>
	</main>
	{{ render(controller('App\\Controller\\DefaultController::banner')) }}
	{% include '/event/_eventList.html.twig' %}
{% endblock %}
