{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Actu index{% endblock %}

{% block body %}
    <h1>Actu index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Image</th>
                <th>Description</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actu in actus %}
            <tr>
                <td>{{ actu.title }}</td>
                <td>{{ actu.image }}</td>
                <td>{{ actu.description }}</td>
                <td>{{ actu.date ? actu.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_actu_show', {'id': actu.id}) }}">Afficher</a>
                    <a href="{{ path('admin_actu_edit', {'id': actu.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de données trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_actu_new') }}">Nouvelle actu</a>
{% endblock %}
