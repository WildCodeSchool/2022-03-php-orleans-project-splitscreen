{% extends 'base.html.twig' %}

{% block title %}Évènement :
	{{ event.title }}
{% endblock %}

{% block body %}
	<div class="mt-5 ms-5">
		<a href="{{ path('event_index') }}">
			<i class="bi bi-arrow-left fs-1"></i>
		</a>
	</div>
	<div class="d-flex flex-column justify-content-center align-items-center mb-3">
		<div class="d-flex align-items-center">
			<i class="bi bi-joystick fs-2 me-2 text-primary"></i>
			<h1>
				{{ event.title }}
			</h1>
			<i class="bi bi-controller fs-2 ms-2 text-secondary"></i>
		</div>
		<small class="text-muted">{{ event.date|date }}</small>
	</div>
	<div>
		<div class="d-flex justify-content-center align-items-center">
			<img src="{{ vich_uploader_asset(event) }}" class="w-50" alt="Photographie d'un évènement">
		</div>
		<p class="m-5">{{ event.description|raw }}</p>
	</div>

	{% if event.slug %}
		<div class="w-75 mx-auto my-5 border border-3 border-dark">
			<iframe src="https://start.gg/tournament/{{event.slug}}/register/embed" frameborder="1" height="800" width="100%"></iframe>
		</div>
	{% endif %}
{% endblock %}
