{% extends 'base.html.twig' %}

{% block title %}Évènement :
	{{ event.title }}
{% endblock %}

{% block body %}
	<div class="mt-5 ms-5">
		<a href="{{ path('event_index') }}">
			<i class="bi bi-arrow-left fs-1"></i>
		</a>
	</div>
	<div class="d-flex flex-column justify-content-center align-items-center mb-3">
		<h1>{{ event.title }}</h1>
		<small class="text-muted">{{ event.date|date }}</small>
	</div>
	<div>

		<a type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
			<div class="d-flex justify-content-center align-items-center">
				<img src="{{ vich_uploader_asset(event) }}" class="w-25" alt="Photographie d'un évènement">
			</div>
		</a>

		<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-fullscreen">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body">
						<img src="{{ vich_uploader_asset(event) }}" class="w-100" alt="Photographie d'un évènement">
					</div>
				</div>
			</div>
		</div>

		<p class="m-5">{{ event.description|raw }}</p>
	</div>

	{% if event.slug %}
		<div class="w-75 mx-auto my-5 border border-3 border-dark">
			<iframe src="https://start.gg/tournament/{{event.slug}}/register/embed" frameborder="1" height="800" width="100%"></iframe>
		</div>
	{% endif %}
{% endblock %}
