{% extends 'base.html.twig' %}

{% block title %}Évènement :
	{{ event.title }}
{% endblock %}

{% block body %}
	<div class="mt-5 ms-5">
		<a href="{{ path('event_index') }}">
			<i class="bi bi-arrow-left fs-1"></i>
		</a>
	</div>
	<div class="d-flex justify-content-center">
		<h1 class="">{{ event.title }}</h1>
	</div>
	<div class="mb-3 m-5">
		<div class="d-flex justify-content-center align-items-center">
			<img src="{{ asset('build/images/' ~ event.image) }}" class="w-50" alt="Photographie d'un évènement">
		</div>
		<div class="mx-5 mt-5 px-5">
			<p class="">{{ event.description }}</p>
			<p class="card-text mt-2">
				<small class="text-muted">{{ event.date|date }}</small>
			</p>
		</div>
	</div>

	{% if event.slug %}
		<div class="w-75 mx-auto my-5 border border-3 border-dark">
			<iframe src="https://start.gg/tournament/{{event.slug}}/register/embed" frameborder="1" height="800" width="100%"></iframe>
		</div>
	{% endif %}
{% endblock %}
